# Thin re-tag image for Docker Hub publishing under docker.io/versanode/openems
FROM docker.io/openems/edge:latest
LABEL org.opencontainers.image.source="https://github.com/Versa-Node/container-packages" \
      org.opencontainers.image.title="openems" \
      org.opencontainers.image.description="OpenEMS Edge re-tagged for VersaNode (arm64/amd64)" \
      org.opencontainers.image.vendor="VersaNode Community" \
      org.opencontainers.image.licenses="MIT"
